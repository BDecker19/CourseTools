<%= form_for(Comment.new, :url => {:controller => 'comments', :action => 'create'}, :remote => true) do |f| %>
  
  <%= hidden_field_tag(:resource_id, resource) %>
  <%= hidden_field_tag(:user_id, session[:user_id])%>

  <div class="actions">
    <%= f.submit %>
  </div>

  <div class="field">
    <%= f.label "Add a comment:" %><br />
    <%= f.text_area :body %>
  </div>

<% end %>
